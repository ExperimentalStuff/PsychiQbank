<h2> My exams </h2>

<% if @exams.length == 0 %>
	<%= link_to "Generate my exams", "#", class: "btn btn-primary btn-danger text-center" %>
<% else %>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Test title</th>
				<th>Card numbers</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			<% @exams.each do |exam| %>
				<tr>
					<td><%= exam.id %></td>
					<td><%= link_to exam.title, exam_path(exam) %></td>
					<td><%= exam.cards.length %></td>
					<td><%= link_to "Delete", exam_path(exam), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "Are you sure?"} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% end %>